&CONTROL
    calculation = 'nscf',
    restart_mode = 'from_scratch',
    prefix = 'BBeH3',
    outdir = './tmp/',
    pseudo_dir = '../../../pseudos/',
    verbosity = 'high',
    tprnfor = .true.,
    tstress = .true.,
/

&SYSTEM
    ibrav = 1,
    A = 19.443000,
    nat = 5,
    ntyp = 3,
    ecutwfc = 80,
    ecutrho = 640,
    occupations = 'smearing',
    smearing = 'marzari-vanderbilt',
    degauss = 0.02,
    nbnd = 20,
    input_dft = 'PBE',
/


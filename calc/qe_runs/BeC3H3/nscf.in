&CONTROL
    calculation = 'nscf',
    restart_mode = 'from_scratch',
    prefix = 'BeC3H3',
    outdir = './tmp/',
    pseudo_dir = '../../../pseudos/',
    verbosity = 'high',
    tprnfor = .true.,
    tstress = .true.,
/

&SYSTEM
    ibrav = 1,
    A = 18.079000,
    nat = 7,
    ntyp = 3,
    ecutwfc = 80,
    ecutrho = 640,
    occupations = 'smearing',
    smearing = 'marzari-vanderbilt',
    degauss = 0.02,
    nbnd = 25,
    input_dft = 'PBE',

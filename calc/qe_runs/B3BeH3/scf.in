&CONTROL
    calculation = 'scf',
    restart_mode = 'from_scratch',
    prefix = 'B3BeH3',
    outdir = './tmp/',
    pseudo_dir = '../../../pseudos/',
    verbosity = 'high',
    tprnfor = .true.,
    tstress = .true.,
/

&SYSTEM
    ibrav = 1,
    A = 18.134000,
    nat = 7,
    ntyp = 3,
    ecutwfc = 80,
    ecutrho = 640,
    occupations = 'smearing',
    smearing = 'marzari-vanderbilt',
    degauss = 0.02,
    input_dft = 'PBE',
/

&ELECTRONS
    diagonalization = 'david',
    mixing_mode = 'plain',
    mixing_beta = 0.7,
    conv_thr = 1.0d-8,
    electron_maxstep = 200,
/


    calculation = 'nscf',
    restart_mode = 'from_scratch',
    prefix = 'B2BeCH3',
    outdir = './tmp/',
    pseudo_dir = '../../../pseudos/',
    verbosity = 'high',
    tprnfor = .true.,
    tstress = .true.,
/


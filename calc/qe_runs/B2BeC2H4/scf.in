    calculation = 'scf',
    restart_mode = 'from_scratch',
    prefix = 'B2BeC2H4',
    outdir = './tmp/',
    pseudo_dir = '../../../pseudos/',
    verbosity = 'high',
    tprnfor = .true.,
    tstress = .true.,
